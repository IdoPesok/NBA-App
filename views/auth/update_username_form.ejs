<form action="/reset_username" method="POST">
    <div class="form-group">
        <p class="form-label">Username: </p>
        <input name="username" type="text" value="<%= currentUser.username %>" class="form-input">
    </div>
    <div class="form-group">
        <input type="submit" value="Update Username" class="form-submit">
    </div>
</form>
